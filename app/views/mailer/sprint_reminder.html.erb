<p><%= "You have #{@issues.size} issue(s) assigned to you with the soonest due in #{@days} days" %></p>

<ul>
<% @issues.each do |issue, sprint| -%>
  <li><%= link_to_issue(issue, :project => true, :only_path => false) %> (<%= due_date_distance_in_words(sprint.end_date) %>)</li>
<% end -%>
</ul>

<p><%= link_to l(:label_issue_view_all), @issues_url %> (<%= l(:label_x_open_issues_abbr, :count => @issues.size) %>)</p>
